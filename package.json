{
  "name": "@guardtime/ksi-js-api",
  "version": "1.0.1",
  "private": true,
  "main": "./dist/main.node.js",
  "browser": "./dist/main.js",
  "types": "./lib/nodejs/main.d.ts",
  "scripts": {
    "test": "jest test/",
    "integration-test": "jest test-integration/",
    "build": "rimraf lib && tsc -t ES6 -d  && webpack",
    "browser:dev": "webpack-dev-server",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "module": "commonjs",
          "target": "es6",
          "declaration": false
        }
      }
    },
    "transform": {
      "^.+\\.tsx?$": "babel-jest",
      "^.+\\.m?js$": "babel-jest"
    },
    "testRegex": "(^.*\\.test)\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "tsx",
      "jsx",
      "node",
      "mjs"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!(@guardtime/gt-js-common/lib))"
    ]
  },
  "peerDependencies": {
    "big-integer": "^1.6.48",
    "@guardtime/gt-js-common": "git+ssh://git@github.com:guardtime/gt-js-common.git",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/csv-parse": "^1.2.2",
    "@types/jest": "^24.0.25",
    "@types/big-integer": "^0.0.31",
    "@types/uuid": "^3.4.6",
    "@babel/core": "^7.7.7",
    "@babel/polyfill": "^7.7.0",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-typescript": "^7.7.7",
    "@guardtime/gt-js-common": "git+ssh://git@github.com:guardtime/gt-js-common.git",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "typescript": "^3.7.4",
    "jest": "^24.9.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "prettier": "^1.19.1",
    "big-integer": "^1.6.48",
    "csv-parse": "^4.8.3",
    "rimraf": "^3.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  }
}
