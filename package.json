{
  "name": "@guardtime/ksi-js-api",
  "version": "1.0.3",
  "repository": {
    "type": "git",
    "url": "git@github.com:guardtime/ksi-js-api.git"
  },
  "license": "SEE LICENSE IN 'LICENSE'",
  "main": "./dist/main.node.js",
  "browser": "./dist/main.js",
  "types": "./lib/common/main.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "test": "jest test/",
    "test:ci": "jest test/ --ci --reporters=default --reporters=jest-junit",
    "integration-test": "jest test-integration/",
    "integration-test:ci": "jest test-integration/ --ci --reporters=default --reporters=jest-junit",
    "build:lib": "tsc -t ES6 -d",
    "build:web": "webpack --config webpack.config.js",
    "build:node": "webpack --config webpack.node.config.js",
    "build": "npm run clean && npm run build:lib && npm run build:web && npm run build:node",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\" \"test-integration/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"test/**/*.ts\" \"test-integration/**/*.ts\" --fix",
    "typedoc": "rimraf docs && typedoc --mode file --out docs/ src/common"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "transform": {
      "^.+\\.ts$": "babel-jest",
      "^.+\\.m?js$": "babel-jest"
    },
    "testRegex": "(^.*\\.test)\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "tsx",
      "jsx",
      "node",
      "mjs"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!(@guardtime/common))"
    ],
    "testEnvironment": "./jest-environment.js"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@babel/runtime": "^7.12.1",
    "@types/big-integer": "^0.0.31",
    "@types/csv-parse": "^1.2.2",
    "@types/jest": "^26.0.15",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-jest": "^26.6.1",
    "babel-loader": "^8.1.0",
    "csv-parse": "^4.12.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.1",
    "jest-environment-node": "^26.6.1",
    "jest-junit": "^12.0.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.5",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0",
    "typedoc": "^0.19.2",
    "license-checker-webpack-plugin": "^0.1.5"
  },
  "jest-junit": {
    "outputDirectory": "./coverage",
    "outputName": "junit.xml"
  },
  "dependencies": {
    "@guardtime/common": "^1.0.3",
    "abortcontroller-polyfill": "^1.5.0",
    "big-integer": "^1.6.48",
    "node-fetch": "^2.6.1",
    "uuid": "^8.3.1"
  }
}
