{
  "name": "ksi-js-api",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/main.node.js",
  "browser": "./dist/main.js",
  "types": "./lib/nodejs/main.d.ts",
  "scripts": {
    "test": "jest",
    "build": "rimraf lib && tsc -t ES6 -d  && webpack",
    "browser:dev": "webpack-dev-server"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "module": "commonjs",
          "target": "es6",
          "declaration": false
        }
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.m?js$": "babel-jest"
    },
    "testRegex": "(^test/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "tsx",
      "jsx",
      "node",
      "mjs"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!(gt-js-common/lib))"
    ]
  },
  "peerDependencies": {
    "gt-js-common": "git+ssh://git@github.com:guardtime/gt-js-common.git#typescript",
    "big-integer": "^1.6.36",
    "node-forge": "^0.7.6"
  },
  "devDependencies": {
    "jest": "^23.6.0",
    "@types/jest": "^23.3.8",
    "ts-jest": "^23.10.4",
    "babel-jest": "^23.6.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "typescript": "^3.1.4",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^5.2.1",
    "rimraf": "^2.6.2",
    "gt-js-common": "git+ssh://git@github.com:guardtime/gt-js-common.git#typescript",
    "big-integer": "^1.6.36",
    "@types/node-forge": "^0.7.6",
    "node-forge": "^0.7.6"
  }
}
