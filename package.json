{
  "name": "@guardtime/ksi-js-api",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:guardtime/ksi-js-api.git"
  },
  "license": "SEE LICENSE IN 'LICENSE'",
  "main": "./dist/main.node.js",
  "browser": "./dist/main.js",
  "types": "./lib/nodejs/main.d.ts",
  "scripts": {
    "test": "jest test/",
    "test:ci": "jest test/ --ci --reporters=default --reporters=jest-junit",
    "integration-test": "jest test-integration/",
    "integration-test:ci": "jest test-integration/ --ci --reporters=default --reporters=jest-junit",
    "build": "rimraf lib && tsc -t ES6 -d  && webpack",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\" \"test-integration/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"test/**/*.ts\" \"test-integration/**/*.ts\" --fix",
    "typedoc": "rimraf docs && typedoc --mode file --out docs/ src/common"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "transform": {
      "^.+\\.ts$": "babel-jest",
      "^.+\\.m?js$": "babel-jest"
    },
    "testRegex": "(^.*\\.test)\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "tsx",
      "jsx",
      "node",
      "mjs"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!(@guardtime/common))"
    ],
    "testEnvironment": "./jest-environment.js"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/runtime": "^7.9.6",
    "@types/big-integer": "^0.0.31",
    "@types/csv-parse": "^1.2.2",
    "@types/jest": "^25.2.1",
    "@types/node-fetch": "^2.5.7",
    "@types/uuid": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "csv-parse": "^4.9.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "jest-environment-node": "^26.0.1",
    "jest-junit": "^10.0.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "typedoc": "^0.17.7",
    "license-checker-webpack-plugin": "^0.1.4"
  },
  "jest-junit": {
    "outputDirectory": "./coverage",
    "outputName": "junit.xml"
  },
  "dependencies": {
    "@guardtime/common": "1.0.2",
    "abortcontroller-polyfill": "^1.4.0",
    "big-integer": "^1.6.48",
    "isomorphic-unfetch": "^3.0.0",
    "uuid": "^7.0.2"
  }
}
