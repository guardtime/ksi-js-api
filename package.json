{
  "name": "@guardtime/ksi-js-api",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/main.node.js",
  "browser": "./dist/main.js",
  "types": "./lib/nodejs/main.d.ts",
  "scripts": {
    "test": "jest test/",
    "test:ci": "jest test/ --ci --reporters=default --reporters=jest-junit",
    "integration-test": "jest test-integration/",
    "build": "rimraf lib && tsc -t ES6 -d  && webpack",
    "browser:dev": "webpack-dev-server",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\" \"test-integration/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"test/**/*.ts\" \"test-integration/**/*.ts\" --fix",
    "publish:ci": "npm --no-git-tag-version version $npm_package_version-$SHORT_COMMIT && npm publish"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "babel-jest",
      "^.+\\.m?js$": "babel-jest"
    },
    "testRegex": "(^.*\\.test)\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "tsx",
      "jsx",
      "node",
      "mjs"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!(@guardtime/gt-js-common))"
    ]
  },
  "peerDependencies": {
    "@guardtime/gt-js-common": "1.1.11",
    "big-integer": "^1.6.48",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@types/big-integer": "^0.0.31",
    "@types/csv-parse": "^1.2.2",
    "@types/uuid": "^7.0.0",
    "@types/jest": "^25.1.4",
    "@babel/core": "^7.8.7",
    "@babel/runtime": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-typescript": "^7.8.3",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "typescript": "^3.8.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "@guardtime/gt-js-common": "1.1.11",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "big-integer": "^1.6.48",
    "csv-parse": "^4.8.8",
    "rimraf": "^3.0.2",
    "uuid": "^7.0.2",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "jest-junit": {
    "outputDirectory": "./coverage",
    "outputName": "junit.xml"
  }
}
