{
  "compilerOptions": {
    "outDir": "./lib",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}
