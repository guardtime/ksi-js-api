{
  "compilerOptions": {
    "outDir": "./lib",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "es2020",
    "target": "es6",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "lib": [
      "es6",
      "es2020",
      "dom"
    ],
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "test",
    "test-integration",
    "config"
  ]
}
